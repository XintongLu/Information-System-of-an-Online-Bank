<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" version="3.0">
  <servlet>
    <servlet-name>Download</servlet-name>
    <servlet-class>control.Download</servlet-class>
    <init-param>
      <param-name>chemin</param-name>
      <param-value>/fichiers/</param-value>
    </init-param>
  </servlet>
  <servlet-mapping>
    <servlet-name>Download</servlet-name>
    <url-pattern>/fichiers/extrait.csv</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>DownloadPDF</servlet-name>
    <servlet-class>control.DownloadPDF</servlet-class>
    <init-param>
      <param-name>chemin</param-name>
      <param-value>/fichiersPDF/</param-value>
    </init-param>
  </servlet>
  <servlet-mapping>
    <servlet-name>DownloadPDF</servlet-name>
    <url-pattern>/fichiersPDF/*</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>DownloadServletTransaction</servlet-name>
    <servlet-class>control.DownloadServletTransaction</servlet-class>
    <init-param>
      <param-name>chemin</param-name>
      <param-value>/fichiers/</param-value>
    </init-param>
  </servlet>
  <servlet-mapping>
    <servlet-name>DownloadServletTransaction</servlet-name>
    <url-pattern>/fichiers/log.txt</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>DowloadServletInfo</servlet-name>
    <servlet-class>control.DowloadServletInfo</servlet-class>
    <init-param>
      <param-name>chemin</param-name>
      <param-value>/fichiers/</param-value>
    </init-param>
  </servlet>
  <servlet-mapping>
    <servlet-name>DowloadServletInfo</servlet-name>
    <url-pattern>/fichiers/loginfo.txt</url-pattern>
  </servlet-mapping>
</web-app>